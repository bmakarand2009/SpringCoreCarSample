<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">
               
    <context:annotation-config/>
    <bean 
class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/>
    
    
     
	<bean id="tire1" class="com.ajcp.withspring.v2annotation.testimpl.Tire">
	</bean>

	<bean id="tire2" class="com.ajcp.withspring.v2annotation.testimpl.Tire">
	</bean>

	<bean id="tire3" class="com.ajcp.withspring.v2annotation.testimpl.Tire">
	</bean>

	<bean id="tire4" class="com.ajcp.withspring.v2annotation.testimpl.Tire">
	</bean>

	<bean id="tires" class="java.util.ArrayList">
		<constructor-arg>
			<list>
				<ref bean="tire1" />
				<ref bean="tire1" />
				<ref bean="tire1" />
				<ref bean="tire1" />
			</list>
		</constructor-arg>
	</bean>

	<!-- TODO convert the value to Enum and class and use it here -->
	<!-- setter Injection example -->
	<bean id="engine" class="com.ajcp.withspring.v2annotation.testimpl.Engine">
		<property name="type" value="V4"></property>
	</bean>

	<!-- constructor injection example -->
	<bean id="car" class="com.ajcp.withspring.v2annotation.testimpl.Car" autowire="constructor">
	</bean>
</beans>